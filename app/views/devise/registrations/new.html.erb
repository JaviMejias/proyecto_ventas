<div class="flex items-center justify-center min-h-screen bg-gray-900 p-4">
  <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-xl p-8 border border-gray-700 transform hover:scale-105 transition-transform duration-300 ease-in-out">
    <h2 class="text-3xl font-extrabold text-center text-white mb-8">Crea tu cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%# Renderizado de mensajes de error de Devise con estilos coherentes %>
      <% if resource.errors.any? %>
        <div class="mb-6 p-4 bg-red-800 border border-red-600 text-white rounded-lg" role="alert">
          <h4 class="font-bold text-lg mb-2">
            <%= pluralize(resource.errors.count, "error impide", "errores impiden") %> que esta cuenta se registrara:
          </h4>
          <ul class="list-disc list-inside text-sm">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-5">
        <%= f.label :email, "Correo electrónico", class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "tu@ejemplo.com", class: "w-full px-4 py-2 border border-gray-600 rounded-lg focus:outline-none focus:ring-3 focus:ring-blue-500 focus:border-blue-500 transition duration-200 bg-gray-700 text-white" %>
      </div>

      <div class="mb-5">
        <%= f.label :password, "Contraseña", class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <% if @minimum_password_length %>
          <small class="text-sm text-gray-400 mb-1 block">(<%= @minimum_password_length %> caracteres mínimo)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "w-full px-4 py-2 border border-gray-600 rounded-lg focus:outline-none focus:ring-3 focus:ring-blue-500 focus:border-blue-500 transition duration-200 bg-gray-700 text-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirmación de contraseña", class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "w-full px-4 py-2 border border-gray-600 rounded-lg focus:outline-none focus:ring-3 focus:ring-blue-500 focus:border-blue-500 transition duration-200 bg-gray-700 text-white" %>
      </div>

      <div class="mt-7">
        <%= f.submit "Registrarse", class: "w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-0.5 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center mt-6 text-sm text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>