<div class="flex items-center justify-center min-h-screen bg-gray-900 p-4">
  <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-xl p-8 border border-gray-700 transform hover:scale-105 transition-transform duration-300 ease-in-out">
    <h2 class="text-3xl font-extrabold text-center text-white mb-8">¡Bienvenido de nuevo!</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-5">
        <%= f.label :email, "Correo electrónico", class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "tu@ejemplo.com", class: "w-full px-4 py-2 border border-gray-600 rounded-lg focus:outline-none focus:ring-3 focus:ring-blue-500 focus:border-blue-500 transition duration-200 bg-gray-700 text-white" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, "Contraseña", class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "w-full px-4 py-2 border border-gray-600 rounded-lg focus:outline-none focus:ring-3 focus:ring-blue-500 focus:border-blue-500 transition duration-200 bg-gray-700 text-white" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-6">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-500 rounded bg-gray-700" %>
          <%= f.label :remember_me, "Recordarme", class: "ml-2 block text-sm text-gray-300" %>
        </div>
      <% end %>
      <div class="mt-7">
        <%= f.submit "Iniciar sesión", class: "w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-0.5 cursor-pointer" %>
      </div>
    <% end %>
    <div class="text-center mt-6 text-sm text-gray-400"> <%= render "devise/shared/links" %>
    </div>
  </div>
</div>