<div class="container my-4 p-4 bg-white rounded shadow">
  <h1 class="text-center mb-4">Detalles de la Venta</h1>
  <table class="table table-detalles-venta table-striped table-hover">
    <thead>
      <tr>
        <th>Menu Item</th>
        <th>Agregados</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @sell.sell_materials.each do |sell_material| %>
        <tr>
          <td data-label="Menu Item"><%= sell_material.menu_item.name %></td>
          <td data-label="Agregados"><%= sell_material.addons.pluck(:name).join(', ') %></td>
          <td data-label="Cantidad"><%= sell_material.quantity %></td>
          <td data-label="Precio">$<%= number_to_currency(sell_material.price, unit: "", delimiter: ".", precision: 0) %></td>
          <td data-label="Total">$<%= number_to_currency(sell_material.total, unit: "", delimiter: ".", precision: 0) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row mt-4">
    <div class="col-md-12 text-end">
      <p><strong>Nombre del Cliente:</strong> <%= @sell.client_name %></p>
      <p><strong>Tipo de Pago:</strong> <%= @sell.payment_type.humanize %></p>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-12 text-end">
      <p><strong>Total:</strong> $<%= number_to_currency(@sell.total, unit: "", delimiter: ".", precision: 0) %></p>
    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to "Volver", sells_path, class: "btn btn-secondary" %>
  </div>
</div>
